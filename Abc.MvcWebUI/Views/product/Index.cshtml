@model IEnumerable<Abc.MvcWebUI.entity.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Kategori listesi</h2>
    <hr/>
    <p>
        @Html.ActionLink("Yeni Ürün", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr/>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th style="width=140px"></th>
        </tr> 

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Upload/@item.Image"width="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.IsHome)
                    {
                        <label class="label label-success">
                            <i class="fas fa-square-check fa-fw" style="color: var(--fa-navy);"></i>
                            EVET
                        </label>


                    }
                    else
                    {
                        <label class="label label-danger">
                            <i class="fas fa-square-check fa-fw" style="color: var(--fa-navy);"></i>
                            HAYIR!
                            </label>
                            }
                    </td>
                <td>
                    @if (item.IsApproved)
                    {
                        <label class="label label-success">
                            <i class="fas fa-square-check fa-fw" style="color: var(--fa-navy);"></i>
                            EVET
                        </label>


                    }
                    else
                    {
                        <label class="label label-danger">
                            <i class="fas fa-square-check fa-fw" style="color: var(--fa-navy);"></i>
                            HAYIR!
                        </label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) 
                   
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })

                </td>
            </tr>
        }

    </table>
</div>